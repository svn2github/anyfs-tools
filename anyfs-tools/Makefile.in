all: fs lib progs

fs:
	cd anyfs; $(MAKE) $(AM_MAKEFLAGS); cd ..
lib:
	$(MAKE) $(AM_MAKEFLAGS) -C libany
progs:
	$(MAKE) $(AM_MAKEFLAGS) -C src
	
install: install_fs install_progs install_scripts install_docs install_include install_trans

install_fs:
	cd anyfs; $(MAKE) $(AM_MAKEFLAGS) install; cd ..
install_progs:
	$(MAKE) $(AM_MAKEFLAGS) -C src install
install_scripts:
	$(MAKE) $(AM_MAKEFLAGS) -C scripts install
install_docs:
	$(MAKE) $(AM_MAKEFLAGS) -C doc install
install_include:
	$(MAKE) $(AM_MAKEFLAGS) -C include install
install_trans:
	$(MAKE) $(AM_MAKEFLAGS) -C po install
	
uninstall:
	cd anyfs; $(MAKE) $(AM_MAKEFLAGS) uninstall; cd ..
	$(MAKE) $(AM_MAKEFLAGS) -C src uninstall
	$(MAKE) $(AM_MAKEFLAGS) -C scripts uninstall
	$(MAKE) $(AM_MAKEFLAGS) -C doc uninstall
	$(MAKE) $(AM_MAKEFLAGS) -C include uninstall
	$(MAKE) $(AM_MAKEFLAGS) -C po uninstall

clean:
	$(MAKE) $(AM_MAKEFLAGS) -C src clean
	$(MAKE) $(AM_MAKEFLAGS) -C libany clean
	cd anyfs; $(MAKE) $(AM_MAKEFLAGS) clean; cd ..

distclean:      clean

depend:
	$(MAKE) $(AM_MAKEFLAGS) -C libany depend
	$(MAKE) $(AM_MAKEFLAGS) -C src depend
